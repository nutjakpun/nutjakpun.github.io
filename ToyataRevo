    <script>
        function changeMainImage(thumbnail, description) {
            // Remove active class from all thumbnails
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            
            // Add active class to clicked thumbnail
            thumbnail.classList.add('active');
            
            // Change main image (in a real implementation, you would change to actual image URLs)
            const mainImage = document.getElementById('mainImage');
            
            // Create a placeholder for the description
            const placeholderSvg = `data:image/svg+xml;base64,${btoa(`
                <svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
                  <rect width="800" height="400" fill="#f8f9fa"/>
                  <text x="400" y="180" text-anchor="middle" font-family="Arial" font-size="32" fill="#667eea">Toyota Hilux Revo</text>
                  <text x="400" y="220" text-anchor="middle" font-family="Arial" font-size="20" fill="#764ba2">${description}</text>
                </svg>
            `)}`;
            
            mainImage.src = placeholderSvg;
        }

        function callDealer() {
            alert('üìû ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡πÑ‡∏õ‡∏¢‡∏±‡∏á 089-123-4567');
            // In real implementation: window.location.href = 'tel:0891234567';
        }

        function lineContact() {
            alert('üí¨ ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏õ‡∏¥‡∏î Line Chat...');
            // In real implementation: window.open('https://line.me/ti/p/@abcauto');
        }

        // Auto-change images every 5 seconds
        let currentImageIndex = 0;
        const thumbnails = document.querySelectorAll('.thumbnail');
        
        setInterval(() => {
            currentImageIndex = (currentImageIndex + 1) % thumbnails.length;
            thumbnails[currentImageIndex].click();
        }, 5000);
    </script>
